<div class="container">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr/>
        <h2 class="intro-text text-center">Contact
          <strong>RP Skypool</strong>
        </h2>
        <hr/>
      </div>
      <div class="col-md-8">
        <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
        <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>
      </div>
      <div class="col-md-4">
        <p>Phone:
          <strong>9916628280/1</strong>
        </p>
        <p>Email:
          <strong><a href="mailto:rpc.nsp@gmail.com">rpskypool@gmail.com</a></strong>
        </p>
        <p>Address:
          <strong>#446, Railway parallel road,
            <br />NGEF Layout, Sadanadanagar,
            <br />Bangalore-560038</strong>
        </p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr/>
        <h2 class="intro-text text-center">Contact
          <strong>form</strong>
        </h2>
        <hr/>
        <p>If you want any support or any thing need to clarify please fill the details to contact us.</p>
        <%= form_for @contact do |f| %>
          <div class="row">
            <div class="form-group col-lg-4">
              <label>Name</label>
              <%= f.text_field 'name', class: "form-control" %>
              </div>
              <div class="form-group col-lg-4">
                <label>Email Address</label>
                <%= f.text_field 'email', class: "form-control" %>
                </div>
                <div class="form-group col-lg-4">
                  <label>Phone Number</label>
                  <%= f.text_field 'phone', class: "form-control" %>
                  </div>
                  <div class="clearfix"></div>
                  <div class="form-group col-lg-12">
                    <label>Message</label>
                    <%= f.text_area 'message', class: "form-control", :rows=>"6" %>
                    </div>
                    <div class="form-group col-lg-12">
                      <%= f.submit "Submit", class: "btn btn-default" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container -->

          <script type="text/javascript">
            $(function() {
              $('#new_contact').validate({
                ignore: [],
                rules:{
                  'contact[name]':
                    {
                    required: true
                  },
                  'contact[email]':{
                    required: true,
                    email:true
                  },
                  'contact[phone]':{
                    required: true,
                    number: true,
                    minlength:10
                  },
                  'contact[message]':{
                    required: true
                  }
                },
                messages:{
                  'contact[name]':{
                    required: ("Please enter the name.")
                  },
                  'contact[email]':{
                    required: "Please enter the email.",
                    email: "Please enter valid email."
                  },
                  'contact[phone]':{
                    required: "Please enter the mobile number.",
                    number: "Please enter only numbers.",
                    minlength: "Please enter the correct mobile number"

                  },
                  'contact[message]':{
                    required: "Please enter the message."
                  }
                }
              });
            });
          </script>
